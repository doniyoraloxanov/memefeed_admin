// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String  @id @default(uuid())
  firstName String
  lastName  String?
  username  String? @unique

  languageCode String?
  status       UserStatus @default(ACTIVE)
  role         Role       @default(USER)

  referredUsers  User[]        @relation("ReferredUsers")
  referredById   String?
  referredBy     User?         @relation("ReferredUsers", fields: [referredById], references: [id])
  referralStatus ReferalStatus @default(IDLE)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  verificationStatus VerificationStatus @default(IDLE)
  point              Point[]

  joinedViaId String?
  joinedVia   Invitation? @relation("JoinedVia", fields: [joinedViaId], references: [id])

  source String?
}

enum ReferalStatus {
  IDLE
  ACTIVE
}

model Point {
  id          String   @id @default(uuid())
  userId      String
  user        User     @relation(fields: [userId], references: [id])
  amount      Float    @default(0)
  pointReason String
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Invitation {
  id String @id @default(uuid())

  link         String  @unique
  rewardAmount Float
  comment      String?

  usersJoined User[] @relation("JoinedVia")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

enum VerificationStatus {
  IDLE
  PASSED
  FAILED
}

enum Role {
  ADMIN
  USER
}

enum UserStatus {
  ACTIVE
  BANNED
  DELETED
}
